         <children>
            <Button mnemonicParsing="false" onAction="#onClickProfile" text="User" GridPane.columnIndex="2">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </Button>
            <HBox alignment="CENTER" spacing="10.0" GridPane.columnIndex="1">
