                        <Insets left="-20.0" top="-20.0" />
                     </StackPane.margin>
                  </ImageView>
               </children>
            </StackPane>
            <GridPane VBox.vgrow="ALWAYS">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints vgrow="ALWAYS" />
                  <RowConstraints vgrow="ALWAYS" />
               </rowConstraints>
               <children>
                  <HBox>
                     <children>
                        <Label fx:id="name" text="Name">
                           <font>
                              <Font size="64.0" />
                           </font>
                        </Label>
                        <Label fx:id="pronouns" text="(pro/nouns)">
                           <font>
                              <Font size="36.0" />
                           </font>
                           <padding>
                              <Insets left="15.0" top="22.0" />
                           </padding>
                        </Label>
                     </children>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </HBox>
                  <VBox alignment="TOP_RIGHT" style="-fx-border-color: black;" GridPane.columnIndex="1">
                     <children>
                        <HBox>
                           <children>
                              <Label fx:id="numFollowers" text="#">
                                 <font>
                                    <Font size="36.0" />
                                 </font>
                              </Label>
                              <Label layoutX="10.0" layoutY="10.0" text=" Followers">
                                 <font>
                                    <Font size="36.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <HBox layoutX="10.0" layoutY="10.0">
                           <children>
                              <Label fx:id="numFollowing" text="#">
                                 <font>
                                    <Font size="36.0" />
                                 </font>
                              </Label>
                              <Label layoutX="10.0" layoutY="10.0" text=" Following">
                                 <font>
                                    <Font size="36.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </VBox>
                  <Label fx:id="bio" text="Bio" GridPane.rowIndex="1">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
            </GridPane>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label text="Experience">
                           <font>
                              <Font size="36.0" />
                           </font>
                        </Label>
                        <Button fx:id="addExperienceBtn" mnemonicParsing="false" text="Add" />
                        <Button fx:id="editExperienceBtn" mnemonicParsing="false" text="Edit" />
                     </children>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </HBox>
                  <ListView fx:id="jobsList" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </VBox>
            <VBox layoutX="30.0" layoutY="399.0" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label text="Skills">
                           <font>
                              <Font size="36.0" />
                           </font>
                        </Label>
                        <Button fx:id="addSkillBtn" mnemonicParsing="false" text="Add" />
                        <Button fx:id="editSkillBtn" mnemonicParsing="false" text="Edit" />
                     </children>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </HBox>
                  <ListView fx:id="skillsList" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </VBox>
            <VBox layoutX="30.0" layoutY="475.0" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
               <children>
                  <Label text="Communities">
                     <font>
                        <Font size="36.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Label>
                  <ListView fx:id="communitiesList" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </content>
</ScrollPane>
