<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.LoginController">
   <top>
      <VBox alignment="CENTER" maxWidth="-Infinity" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Branched Out" textAlignment="CENTER">
               <font>
                  <Font size="64.0" />
               </font>
            </Label>
            <VBox prefWidth="100.0">
               <children>
                  <Label text="User ID" />
                  <TextField promptText="Enter user ID..." />
                  <Label text="Password">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Label>
                  <PasswordField promptText="Enter password..." />
               </children>
            </VBox>
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onClickLogin" text="Login" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <BorderPane.margin>
            <Insets top="20.0" />
         </BorderPane.margin>
      </VBox>
   </top>
</BorderPane>
